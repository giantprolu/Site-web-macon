---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import Map from '../components/Map.astro';
---

<Layout
  title="Contact"
  description="Contactez EIRL REPAIN pour un devis gratuit. Maçonnerie et rénovation à Beauvoir sur Niort (79360). Téléphone : 06 78 96 54 18. Réponse sous 48h."
>
  <!-- Header -->
  <section class="page-header section--black">
    <div class="container">
      <SectionTitle
        subtitle="Contact"
        title="Demandez votre "
        highlight="devis gratuit"
        light={true}
      />
      <p class="page-header__intro">
        Vous avez un projet de maçonnerie ou de rénovation ? Contactez-nous pour obtenir
        un devis gratuit et sans engagement. Nous vous répondons sous 48h.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section contact-section">
    <div class="container">
      <div class="contact__grid">
        <!-- Formulaire -->
        <div class="contact__form-wrapper">
          <h2 class="contact__form-title">Envoyez-nous un message</h2>
          <form class="contact__form" id="contact-form" action="#" method="POST">
            <div class="form__group">
              <label for="name" class="form__label">Nom complet *</label>
              <input
                type="text"
                id="name"
                name="name"
                class="form__input"
                required
                placeholder="Votre nom et prénom"
              />
            </div>

            <div class="form__row">
              <div class="form__group">
                <label for="email" class="form__label">Email *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form__input"
                  required
                  placeholder="votre@email.com"
                />
              </div>
              <div class="form__group">
                <label for="phone" class="form__label">Téléphone *</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="form__input"
                  required
                  placeholder="06 XX XX XX XX"
                />
              </div>
            </div>

            <div class="form__group">
              <label for="address" class="form__label">Adresse du chantier</label>
              <input
                type="text"
                id="address"
                name="address"
                class="form__input"
                placeholder="Adresse où les travaux seront réalisés"
              />
            </div>

            <div class="form__group">
              <label for="service" class="form__label">Type de service *</label>
              <select id="service" name="service" class="form__select" required>
                <option value="">Sélectionnez un service</option>
                <option value="maconnerie">Maçonnerie (neuf ou rénovation)</option>
                <option value="renovation">Rénovation</option>
                <option value="hydrofuge">Nettoyage hydrofuge</option>
                <option value="toiture">Toiture</option>
                <option value="facade">Façade</option>
                <option value="travaux-divers">Travaux divers</option>
                <option value="autre">Autre</option>
              </select>
            </div>

            <div class="form__group">
              <label for="message" class="form__label">Description de votre projet *</label>
              <textarea
                id="message"
                name="message"
                class="form__textarea"
                rows="5"
                required
                placeholder="Décrivez votre projet, les travaux souhaités, les dimensions approximatives..."
              ></textarea>
            </div>

            <div class="form__group form__checkbox">
              <input type="checkbox" id="consent" name="consent" required />
              <label for="consent">
                J'accepte que mes données soient utilisées pour me recontacter concernant ma demande. *
              </label>
            </div>

            <button type="submit" class="btn btn--primary btn--large form__submit">
              Envoyer ma demande
            </button>
          </form>
        </div>

        <!-- Informations de contact -->
        <div class="contact__info">
          <div class="contact__card">
            <h3 class="contact__card-title">Coordonnées</h3>

            <div class="contact__item">
              <div class="contact__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
              </div>
              <div>
                <strong>Téléphone</strong>
                <a href="tel:+33678965418">06 78 96 54 18</a>
              </div>
            </div>

            <div class="contact__item">
              <div class="contact__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
              </div>
              <div>
                <strong>Email</strong>
                <a href="mailto:eirl.repain@outlook.com">eirl.repain@outlook.com</a>
              </div>
            </div>

            <div class="contact__item">
              <div class="contact__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div>
                <strong>Adresse</strong>
                <span>530 Route nationale<br/>79360 Beauvoir sur Niort</span>
              </div>
            </div>

            <div class="contact__item">
              <div class="contact__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              </div>
              <div>
                <strong>Horaires</strong>
                <span>Lundi - Vendredi : 8h - 18h</span>
              </div>
            </div>
          </div>

          <div class="contact__card contact__card--dark">
            <h3 class="contact__card-title">Informations légales</h3>
            <p><strong>EIRL REPAIN</strong></p>
            <p>SIRET : 882 085 244 00011</p>
            <p>530 Route nationale<br/>79360 Beauvoir sur Niort</p>
          </div>

          <div class="contact__cta-phone">
            <p>Vous préférez nous appeler ?</p>
            <a href="tel:+33678965418" class="btn btn--primary btn--large">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              06 78 96 54 18
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Carte interactive -->
  <section class="map-section">
    <div class="container">
      <Map
        lat={46.1847}
        lng={-0.4833}
        zoom={10}
        serviceRadius={50000}
        markerTitle="EIRL REPAIN"
        markerAddress="530 Route nationale, 79360 Beauvoir sur Niort"
      />
    </div>
  </section>
</Layout>

<style>
  .page-header {
    padding: calc(80px + var(--spacing-3xl)) 0 var(--spacing-3xl);
  }

  .page-header__intro {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    color: var(--color-gray);
    font-size: 1.125rem;
  }

  /* Contact Section */
  .contact-section {
    padding-top: var(--spacing-2xl);
  }

  .contact__grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: var(--spacing-3xl);
    align-items: start;
  }

  /* Form */
  .contact__form-title {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-lg);
  }

  .contact__form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form__row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }

  .form__group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form__label {
    font-weight: 500;
    color: var(--color-gray-dark);
  }

  .form__input,
  .form__select,
  .form__textarea {
    padding: 0.875rem 1rem;
    font-family: var(--font-primary);
    font-size: 1rem;
    border: 2px solid var(--color-gray-light);
    border-radius: var(--radius-sm);
    background-color: var(--color-white);
    transition: border-color var(--transition-fast);
  }

  .form__input:focus,
  .form__select:focus,
  .form__textarea:focus {
    outline: none;
    border-color: var(--color-yellow);
  }

  .form__textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form__checkbox {
    flex-direction: row;
    align-items: flex-start;
    gap: var(--spacing-sm);
  }

  .form__checkbox input {
    margin-top: 4px;
    width: 18px;
    height: 18px;
    accent-color: var(--color-yellow);
  }

  .form__checkbox label {
    font-size: 0.875rem;
    color: var(--color-gray);
    cursor: pointer;
  }

  .form__submit {
    align-self: flex-start;
    margin-top: var(--spacing-sm);
  }

  /* Contact Info */
  .contact__card {
    background-color: var(--color-gray-light);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .contact__card--dark {
    background-color: var(--color-black);
    color: var(--color-white);
  }

  .contact__card--dark p {
    color: var(--color-gray);
    margin: 0;
    margin-bottom: var(--spacing-xs);
  }

  .contact__card--dark strong {
    color: var(--color-white);
  }

  .contact__card-title {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-yellow);
  }

  .contact__item {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .contact__item:last-child {
    margin-bottom: 0;
  }

  .contact__icon {
    width: 48px;
    height: 48px;
    background-color: var(--color-black);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: var(--color-yellow);
  }

  .contact__item strong {
    display: block;
    color: var(--color-black);
    margin-bottom: 2px;
  }

  .contact__item a,
  .contact__item span {
    color: var(--color-gray-dark);
  }

  .contact__item a:hover {
    color: var(--color-yellow);
  }

  .contact__cta-phone {
    text-align: center;
    padding: var(--spacing-lg);
    background-color: var(--color-gray-light);
    border-radius: var(--radius-lg);
  }

  .contact__cta-phone p {
    color: var(--color-gray-dark);
    margin-bottom: var(--spacing-md);
  }

  .contact__cta-phone .btn {
    width: 100%;
    justify-content: center;
  }

  /* Map */
  .map-section {
    padding: var(--spacing-2xl) 0 var(--spacing-3xl);
    background-color: var(--color-gray-light);
  }

  @media (max-width: 992px) {
    .contact__grid {
      grid-template-columns: 1fr;
    }

    .contact__info {
      order: -1;
    }
  }

  @media (max-width: 576px) {
    .form__row {
      grid-template-columns: 1fr;
    }

    .form__submit {
      width: 100%;
    }
  }
</style>

<script>
  // Gestion du formulaire de contact avec Resend
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = form?.querySelector('.form__submit') as HTMLButtonElement;
  const originalBtnText = submitBtn?.textContent || 'Envoyer ma demande';

  // Créer un élément pour les messages de feedback
  function showMessage(message: string, isSuccess: boolean) {
    // Supprimer l'ancien message s'il existe
    const existingMessage = form?.querySelector('.form__message');
    if (existingMessage) existingMessage.remove();

    const messageEl = document.createElement('div');
    messageEl.className = `form__message form__message--${isSuccess ? 'success' : 'error'}`;
    messageEl.innerHTML = `
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        ${isSuccess 
          ? '<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>'
          : '<circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/>'
        }
      </svg>
      <span>${message}</span>
    `;
    
    // Insérer avant le bouton submit
    submitBtn?.parentNode?.insertBefore(messageEl, submitBtn);

    // Auto-hide après 10 secondes pour les succès
    if (isSuccess) {
      setTimeout(() => messageEl.remove(), 10000);
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Désactiver le bouton et montrer le loading
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <svg class="spinner" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10" stroke-dasharray="32" stroke-dashoffset="12"/>
        </svg>
        Envoi en cours...
      `;
    }

    try {
      const formData = new FormData(form);

      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData
      });

      const result = await response.json();

      if (result.success) {
        showMessage(result.message, true);
        form.reset();
      } else {
        showMessage(result.message || 'Une erreur est survenue. Veuillez réessayer.', false);
      }
    } catch (error) {
      console.error('Erreur:', error);
      showMessage('Impossible de contacter le serveur. Vérifiez votre connexion internet.', false);
    } finally {
      // Réactiver le bouton
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = originalBtnText;
      }
    }
  });
</script>

<style is:global>
  /* Styles pour les messages de feedback */
  .form__message {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: var(--radius-md);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .form__message--success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .form__message--error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .form__message svg {
    flex-shrink: 0;
  }

  .form__submit:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .form__submit .spinner {
    animation: spin 1s linear infinite;
    margin-right: 0.5rem;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }
</style>
