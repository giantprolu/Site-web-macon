---
interface Props {
  title: string;
  subtitle?: string;
  highlight?: string;
  centered?: boolean;
  light?: boolean;
}

const {
  title,
  subtitle,
  highlight,
  centered = true,
  light = false
} = Astro.props;
---

<div class:list={['section-title', { 'section-title--centered': centered, 'section-title--light': light }]}>
  {subtitle && <span class="section-title__subtitle">{subtitle}</span>}
  <h2 class="section-title__heading">
    {title}
    {highlight && <span class="section-title__highlight">{highlight}</span>}
  </h2>
</div>

<style>
  .section-title {
    margin-bottom: var(--spacing-xl);
  }

  .section-title--centered {
    text-align: center;
  }

  .section-title__subtitle {
    display: inline-block;
    color: var(--color-yellow);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: var(--spacing-sm);
  }

  .section-title__heading {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--color-black);
    line-height: 1.2;
  }

  .section-title--light .section-title__heading {
    color: var(--color-white);
  }

  .section-title__highlight {
    color: var(--color-yellow);
  }
</style>
