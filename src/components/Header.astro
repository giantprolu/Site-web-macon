---
const navLinks = [
  { href: '/', label: 'Accueil' },
  { href: '/services', label: 'Services' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="container header__container">
    <a href="/" class="header__logo" aria-label="EIRL REPAIN - Retour à l'accueil">
      <span class="logo__text">EIRL</span>
      <span class="logo__highlight">REPAIN</span>
    </a>

    <nav class="header__nav" aria-label="Navigation principale">
      <ul class="nav__list">
        {navLinks.map((link) => (
          <li class="nav__item">
            <a
              href={link.href}
              class:list={['nav__link', { 'nav__link--active': currentPath === link.href }]}
              aria-current={currentPath === link.href ? 'page' : undefined}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <a href="/contact" class="header__cta btn btn--primary">
      Devis Gratuit
    </a>

    <button
      class="header__burger"
      aria-label="Ouvrir le menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="burger__line"></span>
      <span class="burger__line"></span>
      <span class="burger__line"></span>
    </button>
  </div>

  <!-- Menu mobile -->
  <div class="mobile-menu" id="mobile-menu" aria-hidden="true">
    <nav aria-label="Navigation mobile">
      <ul class="mobile-menu__list">
        {navLinks.map((link) => (
          <li class="mobile-menu__item">
            <a
              href={link.href}
              class:list={['mobile-menu__link', { 'mobile-menu__link--active': currentPath === link.href }]}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="mobile-menu__item">
          <a href="/contact" class="btn btn--primary mobile-menu__cta">
            Devis Gratuit
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: var(--color-black);
    box-shadow: var(--shadow-md);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }

  .header__logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .logo__text {
    color: var(--color-white);
  }

  .logo__highlight {
    color: var(--color-yellow);
  }

  .nav__list {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .nav__link {
    position: relative;
    color: var(--color-white);
    font-weight: 500;
    padding: 0.5rem 0;
    transition: color var(--transition-fast);
  }

  .nav__link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-yellow);
    transition: width var(--transition-normal);
  }

  .nav__link:hover,
  .nav__link--active {
    color: var(--color-yellow);
  }

  .nav__link:hover::after,
  .nav__link--active::after {
    width: 100%;
  }

  .header__cta {
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
  }

  .header__burger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 30px;
    height: 30px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .burger__line {
    width: 100%;
    height: 3px;
    background-color: var(--color-white);
    border-radius: 2px;
    transition: all var(--transition-normal);
  }

  .header__burger[aria-expanded="true"] .burger__line:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .header__burger[aria-expanded="true"] .burger__line:nth-child(2) {
    opacity: 0;
  }

  .header__burger[aria-expanded="true"] .burger__line:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .mobile-menu {
    display: none;
    position: absolute;
    top: 80px;
    left: 0;
    right: 0;
    background-color: var(--color-black);
    padding: var(--spacing-lg);
    border-top: 1px solid var(--color-gray-dark);
  }

  .mobile-menu.is-open {
    display: block;
  }

  .mobile-menu__list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .mobile-menu__link {
    display: block;
    color: var(--color-white);
    font-size: 1.125rem;
    font-weight: 500;
    padding: var(--spacing-sm) 0;
    border-bottom: 1px solid var(--color-gray-dark);
  }

  .mobile-menu__link:hover,
  .mobile-menu__link--active {
    color: var(--color-yellow);
  }

  .mobile-menu__cta {
    margin-top: var(--spacing-sm);
    width: 100%;
    text-align: center;
  }

  @media (max-width: 768px) {
    .header__nav,
    .header__cta {
      display: none;
    }

    .header__burger {
      display: flex;
    }
  }
</style>

<script>
  const burger = document.querySelector('.header__burger') as HTMLButtonElement;
  const mobileMenu = document.querySelector('.mobile-menu') as HTMLElement;
  const header = document.querySelector('.header') as HTMLElement;

  // Éléments focusables dans le menu mobile
  let focusableElements: HTMLElement[] = [];
  let firstFocusable: HTMLElement | null = null;
  let lastFocusable: HTMLElement | null = null;

  function updateFocusableElements() {
    if (!mobileMenu) return;
    focusableElements = Array.from(
      mobileMenu.querySelectorAll<HTMLElement>(
        'a[href], button:not([disabled]), [tabindex]:not([tabindex="-1"])'
      )
    );
    firstFocusable = focusableElements[0] || null;
    lastFocusable = focusableElements[focusableElements.length - 1] || null;
  }

  function openMenu() {
    burger?.setAttribute('aria-expanded', 'true');
    burger?.setAttribute('aria-label', 'Fermer le menu');
    mobileMenu?.classList.add('is-open');
    mobileMenu?.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
    updateFocusableElements();
    // Focus sur le premier élément du menu
    setTimeout(() => firstFocusable?.focus(), 100);
  }

  function closeMenu() {
    burger?.setAttribute('aria-expanded', 'false');
    burger?.setAttribute('aria-label', 'Ouvrir le menu');
    mobileMenu?.classList.remove('is-open');
    mobileMenu?.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    // Retourner le focus au bouton burger
    burger?.focus();
  }

  burger?.addEventListener('click', () => {
    const isExpanded = burger.getAttribute('aria-expanded') === 'true';
    if (isExpanded) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  // Focus trap - garder le focus dans le menu mobile quand ouvert
  mobileMenu?.addEventListener('keydown', (e: KeyboardEvent) => {
    if (e.key !== 'Tab') return;
    
    updateFocusableElements();
    
    if (e.shiftKey) {
      // Shift + Tab
      if (document.activeElement === firstFocusable) {
        e.preventDefault();
        lastFocusable?.focus();
      }
    } else {
      // Tab
      if (document.activeElement === lastFocusable) {
        e.preventDefault();
        firstFocusable?.focus();
      }
    }
  });

  // Fermer avec Échap
  document.addEventListener('keydown', (e: KeyboardEvent) => {
    if (e.key === 'Escape' && mobileMenu?.classList.contains('is-open')) {
      closeMenu();
    }
  });

  // Fermer le menu mobile lors du clic sur un lien
  document.querySelectorAll('.mobile-menu__link, .mobile-menu__cta').forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  // Fermer le menu si on redimensionne vers desktop
  window.addEventListener('resize', () => {
    if (window.innerWidth > 768 && mobileMenu?.classList.contains('is-open')) {
      closeMenu();
    }
  });
</script>
