---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  phone?: string;
}

const {
  title,
  subtitle,
  ctaText = 'Demander un devis',
  ctaLink = '/contact',
  phone = '06 78 96 54 18'
} = Astro.props;
---

<section class="cta-section section--black">
  <div class="container cta-section__container">
    <div class="cta-section__content">
      <h2 class="cta-section__title">{title}</h2>
      {subtitle && <p class="cta-section__subtitle">{subtitle}</p>}
    </div>
    <div class="cta-section__actions">
      <a href={ctaLink} class="btn btn--primary btn--large">
        {ctaText}
      </a>
      <div class="cta-section__contact-btns">
        <a href={`tel:+33${phone.replace(/\s/g, '').replace(/^0/, '')}`} class="cta-section__contact-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          <span>Appeler</span>
        </a>
        <a href="mailto:eirl.repain@outlook.com" class="cta-section__contact-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          <span>Email</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--spacing-2xl) 0;
    background: linear-gradient(135deg, var(--color-black) 0%, #1a1a1a 100%);
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--color-yellow);
  }

  .cta-section__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-xl);
  }

  .cta-section__title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 0;
  }

  .cta-section__subtitle {
    color: var(--color-gray);
    margin: var(--spacing-sm) 0 0;
  }

  .cta-section__actions {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
    flex-shrink: 0;
  }

  .cta-section__contact-btns {
    display: flex;
    gap: var(--spacing-sm);
  }

  .cta-section__contact-btn {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: 0.75rem 1.25rem;
    background-color: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-white);
    border-radius: var(--radius-sm);
    font-weight: 600;
    font-size: 0.9375rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all var(--transition-normal);
  }

  .cta-section__contact-btn:hover {
    background-color: var(--color-yellow);
    border-color: var(--color-yellow);
    color: var(--color-black);
    transform: translateY(-2px);
  }

  .cta-section__contact-btn svg {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .cta-section__container {
      flex-direction: column;
      text-align: center;
    }

    .cta-section__actions {
      flex-direction: column;
      width: 100%;
    }

    .cta-section__actions .btn {
      width: 100%;
    }
  }
</style>
