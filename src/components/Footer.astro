---
const currentYear = new Date().getFullYear();

const navLinks = [
  { href: '/', label: 'Accueil' },
  { href: '/services', label: 'Services' },
  { href: '/contact', label: 'Contact' },
];

const services = [
  'Maçonnerie neuf',
  'Rénovation',
  'Nettoyage hydrofuge',
  'Toiture',
  'Façade',
];
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <!-- Logo et description -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <span class="logo__text">EIRL</span>
          <span class="logo__highlight">REPAIN</span>
        </a>
        <p class="footer__tagline">
          Votre expert en maçonnerie et rénovation à Beauvoir sur Niort et ses environs.
        </p>
        <p class="footer__siret">
          SIRET : 882 085 244 00011
        </p>
      </div>

      <!-- Navigation -->
      <div class="footer__section">
        <h3 class="footer__title">Navigation</h3>
        <ul class="footer__list">
          {navLinks.map((link) => (
            <li>
              <a href={link.href} class="footer__link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="footer__section">
        <h3 class="footer__title">Nos Services</h3>
        <ul class="footer__list">
          {services.map((service) => (
            <li>
              <span class="footer__service">{service}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer__section">
        <h3 class="footer__title">Contact</h3>
        <ul class="footer__list footer__contact">
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            <a href="tel:+33678965418" class="footer__link">06 78 96 54 18</a>
          </li>
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            <a href="mailto:eirl.repain@outlook.com" class="footer__link">eirl.repain@outlook.com</a>
          </li>
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>530 Route nationale<br/>79360 Beauvoir sur Niort</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Zone d'intervention -->
    <div class="footer__area">
      <h3 class="footer__title">Zone d'intervention</h3>
      <p>Beauvoir sur Niort, Niort, La Rochelle, Fontenay-le-Comte et toutes les communes des Deux-Sèvres (79) dans un rayon de 50km.</p>
    </div>

    <!-- Copyright -->
    <div class="footer__bottom">
      <p>&copy; {currentYear} EIRL REPAIN. Tous droits réservés.</p>
      <p class="footer__legal">
        <a href="/mentions-legales">Mentions légales</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-black);
    color: var(--color-white);
    padding: var(--spacing-3xl) 0 var(--spacing-lg);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
  }

  .footer__logo {
    display: inline-flex;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: var(--spacing-md);
  }

  .logo__text {
    color: var(--color-white);
  }

  .logo__highlight {
    color: var(--color-yellow);
  }

  .footer__tagline {
    color: var(--color-gray);
    margin-bottom: var(--spacing-sm);
  }

  .footer__siret {
    color: var(--color-gray);
    font-size: 0.875rem;
  }

  .footer__title {
    color: var(--color-yellow);
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: var(--spacing-md);
  }

  .footer__list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .footer__link {
    color: var(--color-gray);
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-yellow);
  }

  .footer__service {
    color: var(--color-gray);
    font-size: 0.9375rem;
  }

  .footer__contact li {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    color: var(--color-gray);
  }

  .footer__contact svg {
    flex-shrink: 0;
    margin-top: 2px;
    color: var(--color-yellow);
  }

  .footer__area {
    border-top: 1px solid var(--color-gray-dark);
    border-bottom: 1px solid var(--color-gray-dark);
    padding: var(--spacing-lg) 0;
    margin-bottom: var(--spacing-lg);
  }

  .footer__area p {
    color: var(--color-gray);
    margin: 0;
  }

  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-gray);
    font-size: 0.875rem;
  }

  .footer__legal a {
    color: var(--color-gray);
    transition: color var(--transition-fast);
  }

  .footer__legal a:hover {
    color: var(--color-yellow);
  }

  @media (max-width: 992px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer__brand {
      grid-column: span 2;
    }
  }

  @media (max-width: 576px) {
    .footer__grid {
      grid-template-columns: 1fr;
    }

    .footer__brand {
      grid-column: span 1;
    }

    .footer__bottom {
      flex-direction: column;
      gap: var(--spacing-sm);
      text-align: center;
    }
  }
</style>
